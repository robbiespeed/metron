{
  "compilerOptions": {
    "lib": ["ES2022"],
    "target": "ES2022",
    "module": "CommonJS",
    "noEmit": true,
    "composite": true,
    "isolatedModules": true,
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "allowJs": false,
    "jsx": "react-jsx",
    "jsxImportSource": "@metron/jsx",
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "forceConsistentCasingInFileNames": true
  },
  "ts-node": {
    "swc": true
  }
}
